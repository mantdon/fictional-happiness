{% extends 'Employee/base.html.twig' %}

{% block panels %}
    {% include 'Employee/employee_panels.html.twig' with {
        changepassword_active: 'true'
    }%}
{% endblock %}

{% block panel_content %}
    {{ form_start(form) }}
    {{ form_row(form.oldPassword, {'attr': {'class': 'textField'}, 'label': 'Senas slaptažodis:'} ) }}
    {{ form_errors(form.newPassword.first) }}
    {{ form_label(form.newPassword.first, null, {'label': 'Naujas slaptažodis:'}) }}
    {{ form_widget(form.newPassword.first, {'attr': {'class': 'textField'}} ) }}
    {{ form_row(form.newPassword.second, {'attr': {'class': 'textField'}, 'label': 'Pakartoti slaptažodį:'} ) }}
    {{ form_row(form.submit, {'attr': {'class': 'button'}, 'label': 'Patvirtinti pakeitimus'} ) }}
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}