{% extends 'base.html.twig' %}

{% block head %}
    <title>Prisijungimas</title>
{% endblock %}

{% block body %}
    <div class="login-box">
        <img src="build/images/login-icon.9afbb08c.png" class="login-icon">
        <h1 class="page-header">Prisijungimas</h1>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('login') }}" method="post">
            <label for="username">Elektroninis paštas:</label>
            <input class= "form-control" type="text" id="username" name="_username" value="{{ last_username }}">
            <label for="passsword">Slaptažodis:</label>
            <input class= "form-control" type="password" id="passsword" name="_password">
            <label for="remember_me">Atsiminti mane</label>
            <input type="checkbox" id="remember_me" name="_remember_me" checked>
            <br>
            <input type="submit" name="submit" value="Prisijungti">
        </form>
    </div>
{% endblock %}