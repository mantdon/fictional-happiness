{% extends 'base.html.twig' %}

{% block title %}Prisijungimas{% endblock %}

{% set login_active = 'true' %}

{% block content %}
    <div class="login-box justify-content-center">
        <h1 class="page-header">Prisijungimas</h1>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('login') }}" method="post">
            <label for="username">Elektroninis paštas:</label>
            <input class= "form-control" type="text" id="username" name="_username" value="{{ last_username }}">
            <label for="password">Slaptažodis:</label>
            <input class= "form-control no-bottom-margin" type="password" id="password" name="_password">
            <a class="reset-password-link" href="{{ path('reset_password') }}">Pamiršau slaptažodį</a>
            <label for="remember_me">Atsiminti mane:</label>
            <input type="checkbox" id="remember_me" name="_remember_me" checked>
            <br>
            <input type="submit" name="submit" value="Prisijungti">
        </form>
    </div>
{% endblock %}