<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>{% block title %}Welcome!{% endblock %}</title>
      {% block stylesheets %}
          <!-- Bootstrap CSS -->
          <!-- <link rel="stylesheet" href="{{ asset('build/css/bootstrap.css') }}">-->
          <!-- Custom styles -->
          <link rel="stylesheet" href="{{ asset('build/css/style.css') }}">
          <link rel="stylesheet" href="{{ asset('build/css/loginStyle.css') }}">
{% endblock %}
  </head>
  <body>
    <header>
      <!-- Fixed navbar -->
      <nav class="navbar navbar-expand-md navbar-dark bg-dark">
          <div class="nav-item">
              <a class="navbar-left" href="/"><img src="build/images/logo.532e8b6f.png" alt="" /></a>
          </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Namai<span class="sr-only">(current)</span></a>
            </li>
              {# Seen by unauthenticated users #}
              {% if not app.user %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('user_registration') }}">Registruotis</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('login') }}">Prisijungti</a>
                </li>
              {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Atsijungti</a>
                </li>
          </ul>
            {% endif %}
        </div>
      </nav>
    </header>

    <footer>
      <div class="container">
          {% block body %}
            {# Seen by unauthenticated users #}
            {% if not app.user %}
                <h1>Hello, world</h1>
            {# Seen by authenticated users #}
            {% else %}
                <h1>Hello, {{ app.user.emailname }}</h1>
            {% endif %}
        {% endblock %}
      </div>
    </footer>
    {% block javascripts %}
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    {% endblock %}
  </body>
</html>
