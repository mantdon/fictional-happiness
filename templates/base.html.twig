<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <div id="app"></div>
    <body>
        {% block body %}
            {# Seen by unauthenticated users #}
            {% if not app.user %}
                <h1>Hello, world</h1>
                <a href="{{ path('login') }}">Log in</a>
                <a href="{{ path('user_registration') }}">Register</a>
            {# Seen by authenticated users #}
            {% else %}
                <h1>Hello, {{ app.user.emailname }}</h1>
                <a href="/logout">Log out</a>
            {% endif %}
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset("build/js/app.js") }}"></script>
        {% endblock %}
    </body>
</html>
