<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        {# Bootstrap CSS #}
        <link rel="stylesheet" href="{{ asset('build/css/bootstrap.css') }}">
        {# Custom styles #}
        <link rel="stylesheet" href="{{ asset('build/css/main.css') }}">
        <title>{% block title %}Welcome!{% endblock %}</title>
    </head>
    <body>
    <header>
        {% block header %}
            {# Toggler icon is invisble without navbar-dark #}
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="nav-item">
                    <a class="navbar-left" href="{{ path('homepage') }}"><img src="{{ asset('build/images/logo.532e8b6f.png') }}" alt="Uh oh!" /></a>
                </div>
                <div class="nav-item">
               <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"/>
                </button>
                </div>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                        {% include 'navbar_items.html.twig' %}
                </div>
            </nav>
        {% endblock %}
    </header>

    <div class="container-fluid h-75">
        {% for message in app.flashes('notice') %}
            <div class="alert alert-custom alert-dismissible fade show">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <i class="fas fa-times fa-sm"></i>
                </button>
            </div>
        {% endfor %}
        {% block content %}
        {% endblock %}
    </div>

    <footer>
        {% block footer %}
        {% endblock %}
    </footer>

    {# At the moment, bootstrap javascript #}
    <script src="{{ asset("build/js/app.js") }}"></script>
    {% block additional_scripts %}
    {% endblock %}
    </body>
</html>
