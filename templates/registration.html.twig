{% extends 'base.html.twig' %}

{% block title %}Registracija{% endblock %}

{% set registration_active = 'true' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <h1 class="page-header">Registracija</h1>
                        {{ form_start(form) }}
                        {{ form_errors(form.email) }}
                        {{ form_label(form.email, null, {'label': 'El-paštas'}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'textField'}} ) }}
                        {{ form_errors(form.plainPassword.first) }}
                        {{ form_label(form.plainPassword.first, null, {'label': 'Slaptažodis'}) }}
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'textField'}} ) }}
                        {{ form_row(form.plainPassword.second, {'attr': {'class': 'textField'}, 'label': 'Pakartoti slaptažodį'} ) }}
                        {{ form_row(form.submit, {'attr': {'class': 'button'}, 'label': 'Registruotis'} ) }}
                        {{ form_row(form._token) }}
                        {{ form_end(form, {'render_rest': false}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}