{% extends 'Profile/base.html.twig' %}

{% block tab_bar %}
    {% include 'Profile/tab_bar.html.twig' with {
        messages_active: 'true'
    }%}
{% endblock %}

{% block tab_content %}
    <div class="panel" style="width: 100%; height: 100%; margin-top: 0;">
        <div class="d-flex w-100 justify-content-between">
            <h6>Nuo: {{ messageData.sender }}</h6>
            <h6>Išsiųsta: {{ messageData.dateSent|date('Y/m/d') }}</h6>
        </div>
        <h6>
            Kam: {{
                    messageData.recipient.firstName ~
                    ' ' ~
                    messageData.recipient.lastName
                }}
        </h6>
        <h4>{{ messageData.message.title }}</h4>
        <hr style="background: #c0b7b1">
        <p class="mb-1">{{ messageData.message.content | raw }}</p>
        <hr style="background: #c0b7b1">
        <div>
            <a class="custom-button" href="{{ path('user_messages') }}">Atgal</a>
            <a class="custom-button" onclick="showModal('deleteMessage')">Ištrinti</a>
        </div>
    </div>
    {% include 'Profile/Messages/profile_messages_delete_confirm.html.twig' %}
{% endblock %}