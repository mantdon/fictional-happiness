<ul class="navbar-nav mr-auto">
    {% if home_active is defined and home_active == "true" %}
    <li class="nav-item active">
        <span class="nav-link">Namai</span>
    </li>
    {% else %}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('homepage') }}">Namai<span class="sr-only">(current)</span></a>
        </li>
    {% endif %}

    {% if services_active is defined and services_active == "true" %}
    <li class="nav-item active">
        <span class="nav-link">Paslaugos</span>
    </li>
    {% else %}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('service_index') }}">Paslaugos</a>
        </li>
    {% endif %}

    {# Seen by unauthenticated users #}
    {% if not app.user %}
        {% if registration_active is defined and registration_active == "true" %}
            <li class="nav-item active">
                <span class="nav-link">Registruotis</span>
            </li>
        {% else %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('user_registration') }}">Registruotis</a>
            </li>
        {% endif %}

        {% if login_active is defined and login_active == "true" %}
            <li class="nav-item active">
                <span class="nav-link">Prisijungti</span>
            </li>
        {% else %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('login') }}">Prisijungti</a>
            </li>
        {% endif %}
    {% endif %}
</ul>
{% if app.user %}
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="userMenuDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ app.user.email }}
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userMenuDropdown">
                    {% if is_granted('ROLE_USER') %}
                        <a class="dropdown-item" href="{{ path('user_home') }}">Profile</a>
                        <a class="dropdown-item" href="#">Register for service</a>
                    {% elseif is_granted('ROLE_ADMIN') %}
                        <a class="dropdown-item" href="{{ path('admin_home') }}">Admin panel</a>
                    {% endif %}
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('logout') }}">Logout</a>
                </div>
            </div>
        </li>
    </ul>
{% endif %}