{% extends 'Admin/base.html.twig' %}

{% block title %}Service{% endblock %}

{% block panels %}
    {% include 'Admin/admin_panels.html.twig' with {
        services_active: 'true'
    } %}
{% endblock %}

{% block panel_content %}
    <h1>The following service will be deleted, are you sure?</h1>

    <table class="table table-fixed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ service.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ service.price }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('Admin/Services/_delete_form.html.twig') }}
    <a class="btn btn-warning button-full-width" href="{{ path('admin_services') }}">At≈°aukti</a>
{% endblock %}