{% extends 'Admin/base.html.twig' %}

{% block title %}Service{% endblock %}

{% block panels %}
    {% include 'Admin/admin_panels.html.twig' with {
        services_active: 'true'
    } %}
{% endblock %}

{% block panel_content %}
    <h1>Pasirinkta paslauga bus pašalinta iš sąrašo. Tęsti?</h1>

    <table class="table table-fixed">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Pavadinimas</th>
                <td>{{ service.name }}</td>
            </tr>
            <tr>
                <th>Kaina</th>
                <td>{{ service.price }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('Admin/Services/_delete_form.html.twig') }}
    <a class="btn custom-button w-100" href="{{ path('admin_services') }}">Atšaukti</a>
{% endblock %}