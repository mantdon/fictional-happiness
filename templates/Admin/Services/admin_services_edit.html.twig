{% extends 'Admin/base.html.twig' %}

{% block panels %}
    {% include 'Admin/admin_panels.html.twig' with {
        services_active: 'true'
    } %}
{% endblock %}

{% block panel_content %}
    {{ form_start(form) }}
    {{ form_row(form.name, {'attr': {'class' : 'form-control'}, 'label': 'Pavadinimas'}) }}
    {{ form_row(form.price, {'attr': {'class' : 'form-control'}, 'label': 'Kaina'}) }}
    <hr>
    {{ form_row(form.submit, {'attr': {'class' : 'btn custom-button button-full-width'}, 'label': 'Atnaujinti'}) }}
    <a class="btn custom-button w-100" href="{{ path('admin_services') }}">Atšaukti</a>
    {{ form_end(form) }}
{% endblock %}

{% block b %}
    <h1>Redaguoti</h1>

    {{ include('service/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('service_index') }}">Grįžti</a>

    {{ include('service/_delete_form.html.twig') }}
{% endblock %}