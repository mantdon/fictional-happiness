{% extends 'Admin/base.html.twig' %}

{% block content %}
    <h5 class="text-left m-3">{{ userCount }} Registruoti vartojojai</h5>
    <table class="table">
        <tr class="table-fixed">
            <th>id</th>
            <th>El-paštas</th>
            <th>Vardas</th>
            <th>Telefonas</th>
            <th>Paskyros šalinimas</th>
        </tr>

        {% for user in users %}
            <tr class="table-fixed">
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.firstName ~ ' ' ~ user.lastName }}</td>
                <td>{{ user.phone }}</td>
                <td>
                    {% if user.role == 'ROLE_USER' %}
                        <a href="{{ path('delete.user', {id: user.id}) }}"><button type="button" class="btn btn-danger">Ištrinti</button></a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>
    {# pageOffset - number of page buttons to display on either side of
       currently active one.
    #}
    {% include 'Util/pagination.html.twig' with {
    pageOffset: 2,
    previousPageLabel: "Previous",
    nextPageLabel: "Next"
    } %}
{% endblock %}